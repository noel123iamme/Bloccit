<%= form_for [topic, post, comment] do |f| %>
  <div class="col-md-8">
    <%= f.label "Add a comment:" %>
  </div>
    <div class="col-md-6">
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
  </div>
  <div class="col-md-2">
    <div class="form-group">
      <%= f.submit "Create Comment", class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
